@model Vidly.ViewModels.RandomCustomerViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            Customer
        </th>
    </tr>
    <tr>
        <td>
            @foreach (var customer in Model.Customer)
            {
                @customer.Name
            }
        </td>
    </tr>
</table>